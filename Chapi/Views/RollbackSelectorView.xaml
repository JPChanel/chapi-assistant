<Window x:Class="Chapi.Views.RollbackSelectorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chapi.Views"
        mc:Ignorable="d"
        Title="Seleccionar Rollback" 
        Height="450" 
        Width="650"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título y descripción -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="🔄 Rollbacks Disponibles" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0,0,0,5"/>
            <TextBlock Text="Seleccione un método para revertir los cambios realizados" 
                       FontSize="12" 
                       Foreground="#666"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Lista de rollbacks -->
        <Border Grid.Row="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="4"
                Background="White">
            <ListBox x:Name="listBox" 
                     BorderThickness="0"
                     SelectionChanged="listBox_SelectionChanged"
                     Padding="5">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="8" 
                                Margin="2" 
                                Background="#F9F9F9" 
                                CornerRadius="3"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1">
                            <TextBlock Text="{Binding DisplayText}" 
                                       TextWrapping="Wrap"
                                       FontFamily="Consolas"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Panel de detalles (opcional) -->
        <Border Grid.Row="2" 
                Margin="0,10,0,0"
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="4"
                Background="White"
                Padding="10"
                Visibility="Collapsed"
                x:Name="detailsPanel">
            <StackPanel>
                <TextBlock Text="📋 Detalles del Rollback:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <ScrollViewer MaxHeight="100" 
                              VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="txtDetails" 
                               FontFamily="Consolas" 
                               FontSize="11"
                               TextWrapping="Wrap"
                               Foreground="#333"/>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- Botones de acción -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnLimpiarAntiguos" 
                    Grid.Column="0"
                    Content="🗑️ Limpiar Antiguos (>30 días)" 
                    HorizontalAlignment="Left"
                    Padding="10,5"
                    Click="btnLimpiarAntiguos_Click"
                    Background="#FFF3CD"
                    BorderBrush="#FFC107"
                    ToolTip="Elimina rollbacks con más de 30 días de antigüedad"/>

       
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="btnCancelar" 
                        Content="Cancelar" 
                        Padding="15,5"
                        Margin="5,0"
                        Click="btnCancelar_Click"
                        Background="#E0E0E0"
                        BorderBrush="#BDBDBD"/>
                <Button x:Name="btnAceptar" 
                        Content="✓ Ejecutar Rollback" 
                        Padding="15,5"
                        Margin="5,0"
                        Click="btnAceptar_Click"
                        Background="#FF5722"
                        Foreground="White"
                        BorderBrush="#E64A19"
                        FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>