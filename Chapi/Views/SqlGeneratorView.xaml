<Window x:Class="Chapi.Views.SqlGeneratorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Chapi.Views"
        mc:Ignorable="d"
        Title="Generador de SQL (IA)" 
        Width="800" 
        SizeToContent="Height" 
        Background="#f9fafb"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Generador de SQL (IA)"
                   FontSize="22" FontWeight="Bold" Foreground="#111827"
                   Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="#e5e7eb" BorderThickness="1" Margin="0,0,0,15">
                    <StackPanel>
                        <ComboBox x:Name="CboDbType"
                                  materialDesign:HintAssist.Hint="Tipo de Base de Datos"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  FontSize="14">
                            <ComboBoxItem Content="Sybase (SP)"/>
                            <ComboBoxItem Content="Postgres (SP)"/>
                            <ComboBoxItem Content="Postgres (Función)"/>
                        </ComboBox>
                        <TextBox x:Name="TxtSpName"
                                 materialDesign:HintAssist.Hint="Nombre del SP/Función (ej: OCMAERP.SP_SANCVAL)"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,15,0,0"
                                 FontSize="14"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="#e5e7eb" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Parámetros de .NET" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                        <TextBox x:Name="TxtNetParams"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="420"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 materialDesign:HintAssist.Hint="{Binding ElementName=TxtSpName, Path=Text, StringFormat='Pega tus parámetros aquí...ej: {{ AN_COD_INTEXP = 123, AS_COD_USUARIO = {0}LCORDOVA{0} }}'}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <Button x:Name="BtnGenerate"
                        Content="Generar SQL"
                        Click="BtnGenerate_Click"                      
                        Foreground="White"  Margin="0,0,0,15"
                        materialDesign:ButtonAssist.CornerRadius="6"/>

                <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="#e5e7eb" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Resultado SQL" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                        <TextBox x:Name="TxtSqlOutput"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="550"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 IsReadOnly="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="BtnCopy"
                    Content="Copiar SQL"
                    Click="BtnCopy_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,10,0"/>
            <Button x:Name="BtnClose"
                    Content="Cerrar"
                    Click="BtnClose_Click"
                    Style="{StaticResource MaterialDesignFlatButton}"/>
        </StackPanel>

        <Grid x:Name="LoadingOverlay" Grid.RowSpan="3" 
              Background="#88FFFFFF" Visibility="Collapsed">
            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                         IsIndeterminate="True"
                         Width="50" Height="50"
                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
