<UserControl x:Class="Chapi.Views.Dialogs.InputDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Name="Self"
             MaxWidth="500"
             MinWidth="350">

    <Border BorderThickness="1"
            Padding="16"
            CornerRadius="8"
            BorderBrush="{DynamicResource MaterialDesignDivider}"
            Background="{DynamicResource MaterialDesignPaper}">
        <StackPanel>
            <!-- Título -->
            <TextBlock Text="{Binding Title, ElementName=Self}"
                       FontSize="18"
                       FontWeight="Bold"
                       TextWrapping="Wrap" />

            <!-- Mensaje -->
            <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto" Margin="0,10,0,10">
                <TextBlock Text="{Binding Message, ElementName=Self}"
                           TextWrapping="Wrap"
                           FontSize="14"/>
            </ScrollViewer>

            <!-- Campo de texto -->
            <TextBox x:Name="ResponseTextBox"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     MaxHeight="100"
                     materialDesign:HintAssist.Hint="Ingrese el valor aquí..."
                     Margin="0,0,0,20"
                     KeyDown="ResponseTextBox_KeyDown"/>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="CANCELAR"
                        Click="CancelButton_Click"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Margin="0,0,8,0"/>
                <Button Content="ACEPTAR"
                        Click="AcceptButton_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
