<UserControl x:Class="Chapi.Views.Dialogs.ConfirmationDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chapi.Views.Dialogs"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400"
             x:Name="Self"
             MaxWidth="500">

    <Border BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Barra lateral de color según Variant -->
            <Border Grid.Column="0" Width="5">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Variant, ElementName=Self}" Value="Warning">
                                <Setter Property="Background" Value="{DynamicResource MaterialDesignWarningBrush}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Variant, ElementName=Self}" Value="Error">
                                <Setter Property="Background" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Variant, ElementName=Self}" Value="Info">
                                <Setter Property="Background" Value="{DynamicResource SecondaryHueMidBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <StackPanel Grid.Column="1" Margin="15">
                <!-- Título e ícono -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Width="24" Height="24" VerticalAlignment="Center">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Kind" Value="HelpCircleOutline" />
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Variant, ElementName=Self}" Value="Warning">
                                        <Setter Property="Kind" Value="AlertOutline"/>
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignWarningBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Variant, ElementName=Self}" Value="Error">
                                        <Setter Property="Kind" Value="AlertCircleOutline"/>
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Variant, ElementName=Self}" Value="Info">
                                        <Setter Property="Kind" Value="HelpCircleOutline"/>
                                        <Setter Property="Foreground" Value="{DynamicResource SecondaryHueMidBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>
                    <TextBlock Text="{Binding Title, ElementName=Self}"
                               FontSize="18" 
                               FontWeight="Bold"
                               Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Mensaje -->
                <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding Message, ElementName=Self}"
               TextWrapping="Wrap"
               Margin="0,15,0,20"/>
                </ScrollViewer>

                <!-- Botones Confirm (Sí/No) -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DialogType, ElementName=Self}" Value="Confirm">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Button Content="NO"
                            Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                            CommandParameter="false"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Margin="0,0,8,0"/>
                    <Button Content="SÍ"
                            Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                            CommandParameter="true"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                </StackPanel>

                <!-- Botón Info (OK) -->
                <Button Content="OK"
                HorizontalAlignment="Right"
                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                CommandParameter="true">    
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DialogType, ElementName=Self}" Value="Info">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
